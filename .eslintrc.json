{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "plugins": ["prettier"],
    "rules": {
        "no-console": "warn",
        "prettier/prettier": ["error", {
            "endOfLine": "auto",
            "tabWidth": 4,
            "useTabs": false,
            "semi": true,
            "singleQuote": false
        }]
    }
}
